<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h3 style="margin: 2rem 0rem">Register on Aashiyana</h3>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="row">
                <div class="col-md-12">
                    <div class="username mb-3" >
                        <label for="username" class="form-label">Enter Username</label>
                        <input type="text" name="username" class="form-control" placeholder="Username" required>
                        <!-- <div class="valid-feedback">Username available</div> -->
                        <div class="invalid-feedback">Please enter a username!</div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="email mb-3" >
                        <label for="email" class="form-label">Enter email</label>
                        <input type="text" name="email" class="form-control" placeholder="Email" required>
                        <div class="valid-feedback">Email looks good!</div>
                        <div class="invalid-feedback">Please enter valid email address</div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="password mb-3" >
                        <label for="password" class="form-label">Enter password</label>
                        <input type="password" name="password" class="form-control" placeholder="Password" required>
                        <!-- <div class="valid-feedback">password looks good!</div>
                        <div class="invalid-feedback">Please enter valid password address</div> -->
                    </div>
                </div>
                <button class="col-md-10 offset-1 btn btn-success mt-4 mb-4">Signup</button>
        </form>
    </div>
</div>