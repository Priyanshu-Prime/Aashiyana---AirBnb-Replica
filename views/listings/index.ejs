<% layout("/layouts/boilerplate.ejs") %>
<style>
    .filter-row
    {
        display: flex;
        justify-content: space-between;
    }
    .filter
    {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-left: 1.5rem;
        margin-top: 1.25rem;
        opacity: 0.8;
    }
    .filter:hover
    {
        opacity: 1;
        cursor: pointer;
    }
    .filter p
    {
        font-size: 0.8rem;
    }
    .filter-row a
    {
        color: inherit;
        text-decoration: none;
    }
</style>

<div id="filters">
    <div class="filter-row">
        <a href="/listings/filters/trending"><div class="filter">
            <div><i class="fa-solid fa-fire-flame-curved"></i></div>
            <p>Trending</p>
        </div></a>
        <a href="/listings/filters/rooms"><div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div></a>
        <a href="/listings/filters/pools"><div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Pools</p>
        </div></a>
        <a href="/listings/filters/mountains"><div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div></a>
        <a href="/listings/filters/iconiccities"><div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Iconic Cities</p>
        </div></a>
        <a href="/listings/filters/castles"><div class="filter">
            <div><i class="fa-solid fa-chess-rook"></i></div>
            <p>Castles</p>
        </div></a>
        <a href="/listings/filters/trekking"><div class="filter">
            <div><i class="fa-solid fa-person-hiking"></i></div>
            <p>Trekking</p>
        </div></a>
        <a href="/listings/filters/camping"><div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div></a>
        <a href="/listings/filters/villages"><div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Villages</p>
        </div></a>
        <a href="/listings/filters/snowy"><div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Snowy</p>
        </div></a>
    </div>
</div>
    <body>
        <h3 style="padding: 2rem 1rem">All Listings</h3>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for (listing of allListings) { %>
                    <div class="card listing-card">
                        <a href="/listings/<%= listing._id %>" class="listing-link">
                        <img src="<%= listing.image.url %>" class="card-img-top" style="height:20rem;" alt="<%= listing.image.filename %>">
                        <div class="card-img-overlay">
                          </div>
                        <div class="card-body">
                            <h5 class="card-title" style="height:3rem; color: black">
                                <b><%= listing.title %></b>
                            </h5>
                            <p class="card-text">
                                <%= listing.description %>
                            </p>
                            <a href="/listings/<%= listing._id %>" class="btn btn-primary" style="margin-top: 1rem">Book for &#8377;<%= listing.price.toLocaleString("en-IN") %></a>
                        </div>
                        </a>
                    </div>
            <% } %>
        </div>
    </body>