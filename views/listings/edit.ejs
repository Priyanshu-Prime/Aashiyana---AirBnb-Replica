<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3 style="margin: 2rem 0rem">Create New Listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PATCH">
                <div class="row">
                    <div class="col-md-8">
                        <div class="title mb-3" >
                            <label for="title" class="form-label">Edit Title</label>
                            <input name="title" class="form-control" value="<%= listing.title %>">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="price mb-3">
                            <label for="price" class="form-label">Edit Price</label>
                            <input name="price" class="form-control" value="<%= listing.price %>">
                        </div>
                    </div>
                </div>
                <div class="description mb-3">
                    <label for="description" class="form-label">Edit Description</label>
                    <input name="description" class="form-control" value="<%= listing.description %>">
                </div>
                <div class="image mb-3">
                    <label for="image.url" class="form-label">Edit Image URL</label>
                    <input name="image.url" class="form-control" value="<%= listing.image.url %>">
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="location mb-3">
                            <label for="location" class="form-label">Edit Location</label>
                            <input name="location" value="<%= listing.location %>" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="country mb-3">
                            <label for="country" class="form-label">Edit Country</label>
                            <input name="country" value="<%= listing.country %>" class="form-control">
                        </div>
                    </div>
                </div>
                <button class="btn btn-dark add-btn" style="margin: 1rem 0rem 3rem 0rem">Edit Listing</button>
            </form>
        </div>
    </div>
</body>
</html>